<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Screens.Auth">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_marginLeft="-15dp"
           android:layout_height="wrap_content">
           <View
               android:layout_width="170dp"
               android:layout_height="170dp"
               android:background="@drawable/ellipse1"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.066"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginBottom="30dp"
               app:layout_constraintVertical_bias="0.012" />
           <TextView
               android:id="@+id/titleID"
               android:layout_width="193dp"
               android:layout_height="66dp"
               android:background="@color/white"
               android:gravity="center"
               android:layout_marginTop="50dp"
               android:text="Welcome to sign up page"
               android:textColor="@color/black"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.394"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.09" />
       </androidx.constraintlayout.widget.ConstraintLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/constrainID"
           android:layout_gravity="center"
           android:background="@drawable/borderbackground"
           android:orientation="vertical"
           android:padding="30dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.49"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.679">
           <EditText
               android:layout_width="314dp"
               android:layout_height="41dp"
               android:background="@drawable/border"
               android:ems="10"
               android:id="@+id/UserName"
               android:layout_marginBottom="54px"
               android:hint="User Name :"
               android:inputType="text"
               android:paddingLeft="20dp"
               android:textColor="@color/black"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.478"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.047" />
           <EditText
               android:id="@+id/Email"
               android:layout_width="314dp"
               android:layout_height="41dp"
               android:background="@drawable/border"
               android:ems="10"
               android:hint="E_mail :"
               android:layout_marginBottom="54px"
               android:inputType="textEmailAddress"
               android:paddingLeft="20dp"
               android:textColor="@color/black"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.478"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.211" />
           <EditText
               android:layout_width="314dp"
               android:layout_height="41dp"
               android:background="@drawable/border"
               android:ems="10"
               android:layout_marginBottom="54px"
               android:id="@+id/PhoneNumber"
               android:hint="Phone Number :"
               android:inputType="textPassword"
               android:paddingLeft="20dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.376" />
           <EditText
               android:id="@+id/Password"
               android:layout_width="314dp"
               android:layout_height="41dp"
               android:background="@drawable/border"
               android:ems="10"
               android:hint="Password :"
               android:inputType="textPassword"
               android:paddingLeft="20dp"
               android:layout_marginBottom="54px"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.478"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.543" />
           <EditText
               android:layout_width="314dp"
               android:layout_height="41dp"
               android:background="@drawable/border"
               android:ems="10"

               android:id="@+id/ConfirmPassword"
               android:hint="Confirm Password :"
               android:inputType="textPassword"
               android:paddingLeft="20dp"
               android:layout_marginBottom="54px"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.707" />
           <Button
               android:id="@+id/signUpButton"
               android:layout_width="220dp"
               android:layout_height="60dp"
               android:backgroundTint="#004FEE"
               android:text="SignUp"

               app:cornerRadius="20dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_gravity="center"
               app:layout_constraintVertical_bias="0.977" />
       </LinearLayout>
       <TextView
           android:layout_marginTop="10dp"
           android:id="@+id/loginID"
           android:layout_width="200dp"
           android:layout_height="48dp"
           android:background="@drawable/ellipse"
           android:gravity="center"
           android:text="Or sign in ?"
           android:layout_gravity="center"
           android:textColor="@color/black"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.497"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.95" />
</LinearLayout>