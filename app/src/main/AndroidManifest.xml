<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myshopapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShopApp">
        <activity android:name=".Screens.Splash"></activity>
        <activity android:name=".Screens.Admin_Screen" />
        <activity android:name=".Screens.FavoriteScreen" />
        <activity android:name=".Screens.ProfileScreen" />
        <activity android:name=".Screens.MyAccountScreen" />
        <activity android:name=".Screens.OrdersScreen" />
        <activity android:name=".Screens.CartScreen" />
        <activity android:name=".Screens.ProductScreen" />
        <activity android:name=".Screens.Auth" />
        <activity android:name=".Screens.GetStartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Screens.MainActivity" />
    </application>

</manifest>